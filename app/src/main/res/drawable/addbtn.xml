<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#242b6b" />
            <gradient android:angle="-90" android:startColor="#273bd8" android:endColor="#242b6b"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#273bd8" />
            <solid android:color="#242b6b"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#242b6b" />
            <gradient android:angle="-90" android:startColor="#273bd8" android:endColor="#242b6b" />
        </shape>
    </item>
</selector>